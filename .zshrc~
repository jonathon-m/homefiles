# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
alias vv='fasd -fe vim'

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/jon-m/google-cloud-sdk/path.zsh.inc' ]; then source '/Users/jon-m/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/jon-m/google-cloud-sdk/completion.zsh.inc' ]; then source '/Users/jon-m/google-cloud-sdk/completion.zsh.inc'; fi

# Add gdal headers to path
path+=("/Library/Frameworks/GDAL.framework/Versions/2.1")
path+=("/Library/Frameworks/GDAL.framework/Versions/2.1/Headers")

# Add conda installation
path+=("/usr/local/lib/conda")

 
function frameworkpython {
	if [[ ! -z "$VIRTUAL_ENV" ]]; then
		PYTHONHOME=$VIRTUAL_ENV /usr/local/bin/python "$@"
	else
		/usr/local/bin/python "$@"
	fi
}

export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3
source /usr/local/bin/virtualenvwrapper.sh

